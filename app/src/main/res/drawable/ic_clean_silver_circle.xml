<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/silver" />
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
            <size
                android:width="16dp"
                android:height="16dp" />
        </shape>
    </item>

    <item>
        <bitmap android:src="@drawable/ic_clean" />
    </item>
</layer-list>

